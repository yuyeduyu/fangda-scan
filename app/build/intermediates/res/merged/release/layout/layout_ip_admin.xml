<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
	android:background="#EAEAEB"
    >
	<include layout="@layout/custom_toolbar"/>
	<CheckBox
		android:id="@+id/cb_adress"
		android:textColor="#000"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="服务器地址"
		/>
	<LinearLayout
		android:background="#fff"
	  android:orientation="horizontal"
	  android:layout_width="fill_parent"
	  android:layout_height="wrap_content">

	  	<TextView
			android:textColor="#000"
	        android:layout_alignParentRight="true"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="地址:"
	    />
	    <com.demo.scan.utils.IpEditer
			android:id="@+id/ip_device"
	        android:layout_width="fill_parent"
	        android:layout_height="60dip"

			android:textColor="#000"
	        android:paddingLeft="5dp"
	    />
	</LinearLayout>

	<LinearLayout
		android:background="#fff"
			android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">
		<TextView
				  android:layout_alignParentRight="true"
				  android:layout_width="wrap_content"
				  android:layout_height="wrap_content"
			android:textColor="#000"
				  android:text="端口:"
				/>
		<EditText android:id="@+id/port_device"
				  android:layout_alignParentRight="true"
				  android:layout_width="fill_parent"
				  android:layout_height="60dip"
				  android:numeric="integer"

				  android:textColor="#000"
				  android:paddingLeft="5dp"
				/>

	</LinearLayout>
	<CheckBox
		android:id="@+id/cb_adress_spare"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="备用服务器地址"
		android:textColor="#000"
		/>

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:background="#fff">

		<TextView
			android:layout_alignParentRight="true"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="地址:"
			android:textColor="#000"
			/>
		<com.demo.scan.utils.IpEditer
			android:id="@+id/ip_device_spare"
			android:layout_width="fill_parent"
			android:layout_height="60dip"

			android:textColor="#000"
			android:paddingLeft="5dp"
			/>
	</LinearLayout>

